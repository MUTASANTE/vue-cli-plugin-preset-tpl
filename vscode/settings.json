{
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "singleQuote": true
    }
  },
  // If you use Vetur plugin, set "vetur.validation.template": false to avoid default Vetur template validation.
  // https://vuejs.github.io/vetur/linting-error.html#linting
  "vetur.validation.template": false,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "vetur.completion.useScaffoldSnippets": false,
  "[php]": {
    "files.encoding": "windows1252"
  },
  "html-css-class-completion.remoteStyleSheets": [
    "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
  ],
  "css.remoteStyleSheets": [
    "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
  ],
  "editor.formatOnPaste": true,
  // Will call formaters defined by Vetur for "[vue]" files, mostly prettier or prettier variants.
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "files.hotExit": "off",
  "errorLens.enabledDiagnosticLevels": ["error"],
  "errorLens.gutterIconsEnabled": true,
  "vuejsAutoImport.hasTrailingComma": true,
  "vuejsAutoImport.insertOneComponentPerLine": true,
  "auto-close-tag.fullMode": true,
  "auto-close-tag.SublimeText3Mode": true,
  "auto-close-tag.enableAutoCloseTag": false,
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "terminal.integrated.rendererType": "canvas",
  "emmet.triggerExpansionOnTab": true,
  "window.zoomLevel": 0,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.copyOnSelection": true,
  "editor.codeActionsOnSave": {
    // Will call eslint after "editor.formatOnSave" is done.
    // Eslint can itself call Prettier (see .eslintrc.js), so be careful
    // to not conflict with Vetur's prettier rules used by "editor.formatOnSave".
    "source.fixAll.eslint": true
  },
  // XXX: Visual Studio Code asks to choose between multiple formatters,
  // but are following ones the right ones to choose?
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.iconTheme": "material-icon-theme",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "search.exclude": {
    "**/old": true
  },
  "editor.columnSelection": false,
  "vuejsAutoImport.importWithSemicolon": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "debug.javascript.usePreview": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "i18n-ally.sourceLanguage": "fr",
  "i18n-ally.displayLanguage": "fr",
  "prettier.requireConfig": true,
  "prettier.arrowParens": "avoid",
  "prettier.trailingComma": "none",
  "prettier.quoteProps": "preserve",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": ["/K", "E:\\regroup\\git\\PHPConfiguration\\conf-cordova.cmd"],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO"],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "cSpell.language": "fr,fr-FR,en",
  "cSpell.languageSettings": [
    // This one works with JavaScript, Typescript, etc
    // https://github.com/streetsidesoftware/vscode-spell-checker/issues/107#issuecomment-501770643
    {
      "languageId": "javascript,typescript,vue,json,css,scss,sass",
      "includeRegExpList": ["CStyleComment"],
      // Exclude imports, because they are also strings.
      "ignoreRegExpList": [
        // ignore single line imports (in comments)
        "//\\s*import\\s*.*"
      ]
    }
  ]
}
